<div class="container mx-auto text-center">
    {% if section.stats %}
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
        {% for stat in section.stats %}
        <div class="p-9 border-l-4 border-custom-blue bg-neutral-900 py-6 rounded-2xl">
            <strong class="stat-value text-4xl font-extrabold mb-7 text-white" data-value="{{ stat.value }}">
                0{{ stat.suffix }}
            </strong>
            <p class="mt-2 text-neutral-400">{{ stat.description }}</p>
        </div>
        {% endfor %}
    </div>
    {% endif %}
</div>
